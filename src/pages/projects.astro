    documentation: {
      name: "Council Data Project: Software for Municipal Data Collection, Analysis, and Publication",
      url: "https://doi.org/10.21105/joss.03904",
    },
  },
];
---

<Layout title="To Huynh | Projects" desc="My Projects" currentPage="/projects">
  <div class="py-2 lg:p-4">
    <h1 class="flex justify-center p-4 text-3xl font-bold">Projects</h1>
    <ul
      class="flex flex-col items-center gap-8 lg:flex-row lg:flex-wrap lg:items-start lg:justify-center"
    >
      {
        projects.map((project) => (
          <li>
            <ProjectCard {...project} />
          </li>
        ))
      }
    </ul>
  </div>
</Layout>
