    },
  },
  {
    name: "Council Data Project",
    desc: "A set of open-source tools to improve the accessibility of local government data.",
    url: "https://councildataproject.org",
    techs: [
      "Python",
      "Firebase",
      "TypeScript",
      "Vite",
      "React",
      "Semantic UI React",
      "Emotion",
      "Storybook",
