    },
  },
  {
    name: "AnnoREP",
    desc: "An open-source, web-based tool that helps facilitate Annotation for Transparent Inquiry (ATI) and other annotation-based workflows.",
    url: "https://anno-rep.org",
    techs: [
      "TypeScript",
      "Next.js",
      "NextAuth.js",
      "React",
      "Carbon Design System",
      "Storybook",
      "Jest",
